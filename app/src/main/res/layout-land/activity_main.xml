<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="6"
    tools:context=".MainActivity">


    <LinearLayout
        android:gravity="center"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:background="@drawable/background"
         >

        <TextView
            android:maxLines="1"
            android:textSize="30sp"
            android:textAlignment="textEnd"
            android:id="@+id/textViewId"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:textColor="#FC0303"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="ON"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/clearButtonId"
            android:textColor="#FC0404"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="C"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/backSpaceButtonId"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="-->"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/div_btnId"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="/"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnId7"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnId8"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnId9"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/mul_btnId"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="*"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnId4"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnId5"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnId6"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/sub_btnId"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnId1"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnId2"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnId3"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/sum_btnId"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="+"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnId0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="0"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dot_btnId"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="."
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/equalbtnId"
            android:layout_margin="3dp"
            android:background="@drawable/button_background"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="="
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>